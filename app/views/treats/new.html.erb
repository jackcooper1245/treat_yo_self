<% if @treat.errors.any? %>
  <% @treat.errors.full_messages.each do |message|%>\
  <h5 style= "color: red;"><%= message %> </h5>
  <%end%>
<%end%>

<h1>Add a new treat:</h1>
<%= form_for @treat do |f|%>
<%= f.hidden_field :user_id %>
<%=f.label :name%>
<%= f.text_field :name%>
<%=f.label :cost%>
<%= f.text_field :cost%>
<%= f.submit%>
<%end%>