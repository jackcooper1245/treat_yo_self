<div class="d-flex justify-content-center pb-3">
<div class="card" style="width: 25rem;" class="justify-center w-50 p-3">
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">


<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message|%>\
  <h5 style= "color: red;"><%= message %> </h5>
  <%end%>
<%end%>

<h1>Login</h1>
<%= form_for @user, url: login_path, method: :post, class: "form-control" do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
        <p class='error' style="color: red"><%= show_errors(@user, :email) %></p>

  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
        <p class='error' style="color: red"><%= show_errors(@user, :password) %></p>

  </div>
  <div class="form-group">
    <%= f.submit "log in", class: "btn btn-primary" %> 
  </div>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %>
  <br>
  <%=link_to "Sign up", signup_path, class: "card-link"%>
<% end %> 
</div>
</div>
</div>