<div class="container-fluid">

  <div class="row justify-content-center">
  <div class="col">
    <div class="jumbotron">
        <div class="container">
  <h1 class="display-3"> Hi <%=current_user.first_name%> Welcome to Treat-Yo-Self!</h1>
  </div>
  </div>


  <div class="row">
    
  <div class="col pb-3" style="width: 25%; padding-left: 100px;">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
          <h5 class="card-title">Current Cycles</h5>
            <ul class="card-text text-left">
                  <%current_user.lists.each do |list|%>
                 <li> <%= link_to list.name, list_path(list)%></li>
            <%end%>
          </ul>
      </div>
    </div>
  </div>
<%if current_user.treats.empty?%>
<div class="col-4 pb-3" style="width: 50%; padding-left: 50px;">
  <div class="card" style="width: 18rem;">
    <%= link_to "Add some treats!", new_user_treat_path(current_user), class: "btn btn-primary btn-lg"%>
  </div>
</div>
<%else%>
<div class="col-4 pb-3" style="width: 50%; padding-left: 50px;">
  <div class="card" style="width: 18rem;">
    <%= link_to "Treat Yo Self?", random_path, class: "btn btn-primary btn-lg"%>
  </div>
</div>
<%end%>
<div class="col pb-3" style="width: 25%">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">Remaining Budget: <%=current_user.budget.currency%><%=current_user.budget.total%></h5>
    </div>
  </div>
</div>
  
</div>


<div class="row">
<div class="col" style="padding: 60px;">
<div class="card" style="width: 100%;">
<h2>Treat Calendar</h2>
      <%= week_calendar start_data: Time.now, events: @lts do |date, lts| %>
        <%= date.day %>

        <% lts.each do |lt| %>
          <div>
            <%=link_to lt.treat.name, treat_path(lt.treat) %>
          </div>
        <% end %>
      <% end %>
      </div>
  </div>  
</div>
</div>

</div>
 