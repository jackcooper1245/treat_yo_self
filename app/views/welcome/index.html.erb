<div class="container">

  <div class="row">
  <div class="col">
    <div class="jumbotron">
        <div class="container">
  <h1 class="display-3"> Hi <%=current_user.first_name%> Welcome to Treat-Yo-Self!</h1>
  </div>
  </div>


  <div class="row">
    
     <div class="col pb-3">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
      <h5 class="card-title">Current Cycles</h5>
      <ul class="card-text text-left">
                  <%current_user.lists.each do |list|%>
                 <li> <%= link_to list.name, list_path(list)%></li>
            <%end%>
            </ul>
      </div>
    </div>
    </div>
    
  <div class="col-4 pb-3">
    <div class="card" style="width: 18rem;">
      <%= link_to "Treat Yo Self?", random_path, class: "btn btn-primary btn-lg"%>
  </div>
  </div>

    <div class="col pb-3">
    <div class="card" style="width: 18rem;">
          <div class="card-body">

      <h5 class="card-title">Remaining Budget: <%=current_user.budget.currency%><%=current_user.budget.total%></h5>
      <%= link_to "Update budget", edit_budget_path(current_user), class: "card-link"%>
</div>
</div>
</div>
  
</div>


<div class="row">
<div class="col" style="padding: 60px;">
<div class="card" style="width: 60rem;">
<h2>Treat Calendar</h2>
      <%= week_calendar start_data: Time.now, events: @treats do |date, treats| %>
        <%= date.day %>

        <% treats.each do |treat| %>
          <div>
            <%=link_to treat.name, treat_path(treat) %>
          </div>
        <% end %>
      <% end %>
      </div>
  </div>  
</div>
</div>
 