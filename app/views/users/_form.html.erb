<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message|%>\
  <h5 style= "color: red;"><%= message %> </h5>
  <%end%>
<%end%>


<%= form_for(@user) do |f|%>

<div class="form-row">
    <div class="form-group col-md-6">

<%= f.label :user_name%>
<%= f.text_field :user_name, class: "form-control"%>
    <p class='error' style="color: red"><%= show_errors(@user, :user_name) %></p>

</div>
    <div class="form-group col-md-6">
<%= f.label :email%>
<%= f.text_field :email, class: "form-control"%>
    <p class='error' style="color: red"><%= show_errors(@user, :email) %></p>

</div>
<div class="form-row">

    <div class="form-group col-md-6">
<%= f.label :first_name%>
<%= f.text_field :first_name, class: "form-control"%>
    <p class='error' style="color: red"><%= show_errors(@user, :first_name) %></p>

</div>

    <div class="form-group col-md-6">
<%= f.label :last_name%>
<%= f.text_field :last_name, class: "form-control"%>
    <p class='error' style="color: red"><%= show_errors(@user, :last_name) %></p>

</div>
</div>

    <div class="form-group col-md-3">
<%= f.label :age%>
<%= f.text_field :age, class: "form-control"%>
    <p class='error' style="color: red"><%= show_errors(@user, :age) %></p>

</div>
</div>

<div class="form-row">
    <div class="form-group col-md-6">
<%= f.fields_for :budget do |budg| %>
    <%= budg.label :budget_total %>
    <%= budg.text_field :total, class: "form-control" %><br>
        <p class='error' style="color: red"><%= show_errors(@budget, :total) %></p>

    </div>
    <div class="form-group col-md-3">

    <%= budg.label :budget_currency %>
    <%= budg.text_field :currency, class: "form-control" %><br>
            <p class='error' style="color: red"><%= show_errors(@budget, :currency) %></p>

    </div>
<%end%>

 </div>
   
<div class="form-row">

    <div class="form-group col-md-6">
<%= f.label :password%>
<%= f.password_field :password, class: "form-control"%>
        <p class='error' style="color: red"><%= show_errors(@user, :password) %></p>

</div>

    <div class="form-group col-md-6">
<%= f.label :password_confirmation%>
<%= f.password_field :password_confirmation, class: "form-control"%>
        <p class='error' style="color: red"><%= show_errors(@user, :password_confirmation) %></p>

</div>
</div>
<div class="form-group">
<%= f.submit class: 'btn-lg btn-primary'%>
</div>
<%end%>