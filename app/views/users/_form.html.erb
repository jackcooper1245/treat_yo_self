<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message|%>\
  <h5 style= "color: red;"><%= message %> </h5>
  <%end%>
<%end%>


<%= form_for(@user) do |f|%>
<div class="form-row">
    <div class="form-group col-md-6">
<%= f.label :email%>
<%= f.text_field :email, class: "form-control"%>
    <p class='error' style="color: red"><%= show_errors(@user, :email) %></p>

</div>


    <div class="form-group col-md-6">
<%= f.label :name%>
<%= f.text_field :name, class: "form-control"%>
    <p class='error' style="color: red"><%= show_errors(@user, :first_name) %></p>

</div>
</div>



<%= f.fields_for :budget do |budg| %>
    <%= budg.hidden_field :total, value: nil %>
    <%= budg.hidden_field :currency, value: "Â£" %>
<%end%>
   
<div class="form-row">

    <div class="form-group col-md-6">
<%= f.label :password%>
<%= f.password_field :password, class: "form-control"%>
        <p class='error' style="color: red"><%= show_errors(@user, :password) %></p>

</div>

    <div class="form-group col-md-6">
<%= f.label :password_confirmation%>
<%= f.password_field :password_confirmation, class: "form-control"%>
        <p class='error' style="color: red"><%= show_errors(@user, :password_confirmation) %></p>

</div>
</div>
<div class="form-group">
<%= f.submit class: 'btn-lg btn-primary'%>
</div>
<%end%>